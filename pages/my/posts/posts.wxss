/* pages/my/posts/posts.wxss */

.worksheet-list {
    display: flex;
    flex-direction: column;
}

.list-item {
    display: flex;
    flex-direction: column;
    padding: 20rpx 30rpx;
    margin-bottom: 24rpx;
    /* border-bottom: 1rpx solid #a1cb2f; */
    background-color: #fff;
}

.worksheet-time {
    font-size: 0.6em;
    color: #adadad;
}

.worksheet-summary {
    width: 97%;
    overflow: hidden;
    font-size: 0.9em;
    margin: 10rpx 0;
}

.album {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin: 10rpx;
}

.album image {
    width: 200rpx;
    height: 200rpx;
    margin: 4rpx 7rpx;
}
