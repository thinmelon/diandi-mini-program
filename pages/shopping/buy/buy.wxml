<!--pages/shopping/buy/buy.wxml-->
<view class="container">
    <view class="shopping-address" bindtap="bindTapDeliveryAddress">
        <view class='consignee' wx:if="{{isSet}}">
            <view class='outter'>
                <text>收件人地址：</text>
            </view>
            <view class='top'>
                <text>{{receiver}}</text>
                <text>{{mobile}}</text>
            </view>
            <view class='center'>
                <text>{{address}}</text>
            </view>
        </view>
        <view class='unset' wx:else>
            <text>设置收货地址</text>
        </view>
        <view class='item-select'>
            <image src="/icons/list-item-select.png"></image>
        </view>
    </view>
    <view class="description">
        <view class="upper" wx:for="{{skuList}}" wx:key="{{item.skuid}}">
            <view class="thumbnail">
                <image mode="aspectFill" src="{{prefix}}{{item.thumbnail}}"></image>
            </view>
            <view class="brief-intro">
                <view class="name">
                    <text>{{item.name}}</text>
                </view>
                <view class='standard'>
                    <text>{{item.attributes}}</text>
                </view>
                <view class="details">
                    <text>￥{{item.unit}}</text>
                    <text>X {{item.amount}}</text>
                </view>
            </view>
        </view>
        <view class="shipping">
            <view class="left">
                <text>配送方式</text>
            </view>
            <view class="right">
                <text>免运费</text>
            </view>
        </view>
        <view class="message">
            <view class="left">
                <text>留言</text>
            </view>
            <view class="right">
                <input placeholder="点击给商家留言" value='{{message}}' bindinput='bindInputFunc' />
            </view>
        </view>
        <view class="subtotal">
            <view class="left">
                <text>小计</text>
            </view>
            <view class="right">
                <text>{{subtotal}}元</text>
            </view>
        </view>
        <view class="sms">
            <view class="left">
                <text>短信通知收件人</text>
            </view>
            <view class="right">
                <switch type="switch" checked />
            </view>
        </view>
        <view class="price">
            <view class="goods-price">
                <view class="left">
                    <text>商品金额</text>
                </view>
                <view class="right">
                    <text>￥{{subtotal}}</text>
                </view>
            </view>
            <view class="carriage">
                <view class="left">
                    <text>运费</text>
                </view>
                <view class="right">
                    <text>+ ￥0.00</text>
                </view>
            </view>
        </view>
    </view>
    <view class="space"></view>
    <view class="bottom-bar">
        <view class="total">合计：
            <text>{{total}}元</text>
        </view>
        <view class="submit-order" bindtap="bindTapSubmitOrder">
            <text>提交订单</text>
        </view>
    </view>
</view>
