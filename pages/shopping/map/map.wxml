<!--pages/shopping/map/map.wxml-->
<map class="pusuMap" longitude="{{centerLongitude}}" latitude="{{centerLatitude}}" scale="{{scale}}" markers="{{markers}}" bindmarkertap="bindMarkerTap">
    <cover-view class="controller" wx:if="{{isBusinessShow}}" bindtap='bindTapController'>
        <cover-view class='container'>
            <cover-view>
                <cover-image src="/icons/public/sample.jpeg" />
            </cover-view>
            <cover-view class="item">
                <cover-view>营业时间: 18:00 ~ 02:00</cover-view>
            </cover-view>
            <cover-view class="item">
                <cover-view>折前人均: ￥60+</cover-view>
            </cover-view>
            <cover-view class="item">
                <cover-view>电话: 0594-2995777; 13859837178</cover-view>
            </cover-view>
            <cover-view class="item" catchtap='catchTapNavigator'>
                <cover-view>导航</cover-view>
                <cover-image src="/icons/public/select.png" style='width: 20px; height: 20px; padding-right: 0.3rem;' />
            </cover-view>
			<cover-view class="item" catchtap='catchTapOfficial'>
                <cover-view>介绍</cover-view>
                <cover-image src="/icons/public/select.png" style='width: 20px; height: 20px; padding-right: 0.3rem;' />
            </cover-view>
			<cover-view class="item" catchtap='catchTapProduct'>
                <cover-view>优惠</cover-view>
                <cover-image src="/icons/public/select.png" style='width: 20px; height: 20px; padding-right: 0.3rem;' />
            </cover-view>
        </cover-view>
    </cover-view>
</map>