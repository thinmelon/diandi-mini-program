/* pages/shopping/product/product.wxss */

.swiper-item {
    width: 100%;
    height: 100%;
}

.intro {
    padding: 0 8px;
}

.extra {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 8px 0;
    color: #888;
    font-size: 11pt;
}

/* 底部 - 功能区 */

.bottom-bar {
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.bar-button {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-left: 1rpx solid #eee;
    background-color: #fff;
}

.bar-button image {
    width: 50rpx;
    height: 50rpx;
}

.bar-button text {
    width: 100rpx;
    font-size: 8pt;
}

.bar-add-to-cart, .bar-buy {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.bar-add-to-cart {
    background-color: #d1c2d3;
}

.bar-buy {
    width: 100%;
    background-color: #813c85;
}

.bar-add-to-cart text, .bar-buy text {
    font-size: 12pt;
    font-weight: bold;
}

.bar-add-to-cart text {
    width: 250rpx;
    color: #813c85;
}

.bar-buy text {
    color: white;
}

/*  规格选择  */

.sku-values {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.sku-values-item {
    margin: 5px;
    padding: 1rpx 24rpx 15rpx 24rpx;
    border: 1rpx solid #353535;
    font-size: 11pt;
}

.chosen-item {
    color: #813c85;
    font-weight: bold;
}

/*  规格选择  */

.quantity {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.quantity .opera {
    padding: 20rpx 30rpx;
    border: 1rpx solid #808080;
}

.quantity .amount {
    margin: 20rpx 30rpx;
}

